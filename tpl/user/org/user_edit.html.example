
<style>
.pageFormContent dl.nowrap dd {width:400px;}
</style>
<div class="pageContent">
	<form method="post" action="user/save" class="pageForm required-validate" onsubmit="return validateCallback(this, navTabAjaxDone);">
        <input type="hidden" name="target_tab" value="{{target_tab}}"/>
		<div class="pageFormContent" layoutH="56">
        <fieldset style="border:0px;">
            <dl class="nowrap">
				<dt>ID：</dt>
				<dd>{{user.id}}</dd>
				<input type="hidden" name="id" value="{{user.id}}"/>
			</dl>			
            <dl class="nowrap">
				<dt>登录名：</dt>
				<dd><input name="name" class="required" type="text" value="{{user.name}}"/></dd>
				<dt>真实姓名：</dt>
				<dd><input name="real_name" class="required" type="text" value="{{user.real_name}}"/></dd>
			</dl>			
            <dl class="nowrap">
				<dt>密码：</dt>
				<dd><input type="password"  value="" name="password" class="textInput"></dd>
				<dt>确认密码：</dt>
				<dd><input type="password"  value="" name="confirmPassword" class="textInput" /></dd>
			</dl>
            <dl class="nowrap">
				<dt>超级用户：</dt>
                <dd>
				<select name="is_root" class="required combox">
					<option value="0" {% if not user.is_root %}selected="selected"{%end%}>否</option>
                    {% if current_user['is_root'] %}
					<option value="1" {% if user.is_root %}selected="selected"{%end%} >是</option>
                    {% end %}
				</select>
                </dd>
				<dt>内部员工：</dt>
                <dd>
				<select name="is_staff" class="required combox">
					<option value="1" {% if user.is_staff %}selected="selected"{%end%} >是</option>
					<option value="0" {% if not user.is_staff %}selected="selected"{%end%}>否</option>
				</select>
                </dd>
			</dl>
            <dl class="nowrap">
				<dt>组织：</dt>
                <dd>
                    <input name="org_u0.id" value="{{user.org_id}}" type="hidden"/>
                    <input name="org_u0.name" type="text" value="{{user.organization.get('name', '')}}" />
                    <a class="btnLook" href="org/treelookup" lookupGroup="org_u0">选择</a>
                </dd>

				<dt>员工号：</dt>
				<dd><input type="text" name="staff_no" size="30" value="{{user.staff_no}}"/></dd>
			</dl>
            <dl class="nowrap">
				<dt>电子邮箱：</dt>
				<dd><input type="text" name="email" class="email" size="30" value="{{user.email}}"/></dd>
				<dt>手机：</dt>
                <dd><input type="text" name="phone" size="30" value="{{user.phone}}"/></dd>
			</dl>

            <dl class="nowrap">
				<dt>岗位：</dt>
                <dd>
				<select name="org_u{{user.id}}.id" class="required" style="width:160px;margin-right:10px;">
                    {% for i in cur_org_positions %}
					<option value="{{i.id}}" {% if i.id == user.position_id %}selected="selected"{%end%}>{{i.full_name}}</option>
                    {% end %}
				</select>
                </dd>
 			</dl>

        </fieldset>
        <fieldset style='border:0px;'>
            <dl class="nowrap"><dt>角色列表：</dt> <dd> </dd></dl>
            <dl class="nowrap">
            {% for i in all_roles %}
            <dd style="width:160px;">
            <input name="role__{{i.id}}" value="{{i.id}}" type="checkbox" {% if i.id in cur_roles %}checked{%end%}>{{i.name}}
            </dd>
            {% end %}
            </dl>
        </fieldset>
		</div>
		<div class="formBar">
			<ul>
				<li><div class="buttonActive"><div class="buttonContent"><button type="submit">保存</button></div></div></li>
				<li>
					<div class="button"><div class="buttonContent"><button type="button" class="close">取消</button></div></div>
				</li>
			</ul>
		</div>
	</form>
</div>

